<%include ./partials/header.ejs%>

<div class="w-full min-h-screen flex items-center justify-center bg-black px-4">
  <div class="flex max-w-[850px] w-full items-center justify-center gap-10">

    <!-- Left Image -->
    <div class="hidden md:block w-[380px] h-[550px] overflow-hidden">
      <img src="/images/assets/img1.png" alt="Instagram Preview" class="object-contain w-full h-full" />
    </div>

    <!-- Login Box -->
    <div class="bg-black text-white w-full max-w-xs flex flex-col items-center space-y-4">
      <!-- Instagram logo -->
      <h1 class="text-5xl font-serif mb-4">Instagram</h1>

      <!-- Login Form -->
      <form action="/login" method="POST" class="w-full space-y-2">
        <input type="text" name="username" placeholder="Phone number, username, or email"
          class="w-full px-3 py-2 text-sm rounded bg-zinc-800 border border-zinc-700 focus:outline-none" />
        <input type="password" name="password" placeholder="Password"
          class="w-full px-3 py-2 text-sm rounded bg-zinc-800 border border-zinc-700 focus:outline-none" />
        <button type="submit"
          class="w-full bg-blue-600 hover:bg-blue-700 transition text-white font-semibold py-2 rounded text-sm">
          Log in
        </button>
      </form>

      <!-- OR Divider -->
      <div class="flex items-center w-full my-2">
        <div class="flex-grow h-px bg-gray-600"></div>
        <span class="mx-3 text-gray-400 text-xs font-semibold">OR</span>
        <div class="flex-grow h-px bg-gray-600"></div>
      </div>

      <!-- Facebook Login -->
      <button class="text-blue-400 text-sm font-semibold hover:underline">
        <i class="fab fa-facebook-square mr-2"></i> Log in with Facebook
      </button>

      <!-- Forgot Password -->
      <a href="#" class="text-xs text-white hover:underline">Forgot password?</a>

      <!-- Sign Up -->
      <div class="w-full  p-4 text-center mt-4 rounded">
        <p class="text-sm text-gray-300">
          Don't have an account? <a href="/register" class="text-blue-500 font-semibold hover:underline">Sign up</a>
        </p>
      </div>

      <!-- App Downloads -->
      <p class="text-xs text-gray-400 mt-4">Get the app.</p>
      <div class="flex space-x-2">
          <a
                    href="https://play.google.com/store/apps/details?id=com.instagram.android&referrer=ig_mid%3D4AE2DE90-1DBA-4B3E-92A9-2E44D6263D9C%26utm_content%3Dlo%26utm_source%3Dinstagramweb%26utm_medium%3Dbadge">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/7/78/Google_Play_Store_badge_EN.svg/512px-Google_Play_Store_badge_EN.svg.png"
                        class="h-10"> </a>
                <a
                    href="ms-windows-store://pdp/?productid=9nblggh5l9xt&referrer=appbadge&source=www.instagram.com&mode=mini&pos=0%2C0%2C1536%2C864">
                    <img src="https://developer.microsoft.com/en-us/store/badges/images/English_get-it-from-MS.png"
                        class="h-10">
                </a>
      </div>
    </div>
  </div>
</div>

<%include ./partials/footer.ejs%>
